{% extends "::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Stratégie et environnement de l'entreprise
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/core/css/frontend.css') }}" type="text/css">
{% endblock %}

{% block bodytag %}
<body data-spy="scroll" data-offset="0" data-target="#theMenu">
{% endblock %}

{% block body %}
    <!-- Menu -->
    <nav class="menu" id="theMenu">
        <div class="menu-wrap">
            <h1 class="logo"><a href="#home">Colloque 2017</a></h1>
            <i class="fa fa-times menu-close"></i>
            <a href="#home" class="smoothScroll">Home</a>
            <a href="#about" class="smoothScroll">Présentation</a>
            <a href="#location" class="smoothScroll">Lieu</a>
            <a href="#information" class="smoothScroll">Information</a>
            <a href="#contact" class="smoothScroll">Contact</a>
            <a href="{{ path('core_moncolloque_home') }}" class="monColloque">Mon Colloque</a>
            <a href="https://twitter.com/colloqueesiea" target="_blank"><i class="fa fa-twitter"></i></a>
            <a href="mailto:giton@et.esiea.fr"><i class="fa fa-envelope"></i></a>
        </div>

        <!-- Menu button -->
        <div id="menuToggle"><i class="fa fa-bars"></i></div>
    </nav>

    <section id="home">
        <div id="headerwrap">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h1>COLLOQUE 2017</h1>
                    </div>
                </div><!--/row -->
            </div><!--/container -->
        </div><!--/headerwrap -->
    </section>

    <section id="about">
        {{ render(controller('CoreBundle:Home:about')) }}
    </section>

    <!-- ABOUT SEPARATOR -->
    <div class="sep about visible-lg-block visible-md-block visible-sm-block" data-stellar-background-ratio="0.5"
         data-stellar-vertical-offset="150"></div>
    <hr class="visible-xs">

    <!-- LOCATION SECTION -->
    <section id="location">
        {{ render(controller('CoreBundle:Home:location')) }}
    </section>

    <!-- LOCATION SEPARATOR -->
    <div class="sep location visible-lg-block visible-md-block visible-sm-block" data-stellar-background-ratio="0.5"
         data-stellar-vertical-offset="0"></div>
    <hr class="visible-xs">

    <!-- INFORMATION SECTION -->
    <section id="information">
        {{ render(controller('CoreBundle:Home:information')) }}
    </section>

    <!-- INFORMATION SEPARATOR -->
    <div class="sep information visible-lg-block visible-md-block visible-sm-block" data-stellar-background-ratio="0.5"
         data-stellar-vertical-offset="0"></div>

    <!-- CONTACT SECTION -->
    <section id="contact">
        {{ render(controller('CoreBundle:Home:contact')) }}
    </section>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: -34.397, lng: 150.644},
            zoom: 8
        });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAs_hiK6dprXNBTKLtdkK9V6iDiiu2HPJs&libraries=places&callback=initMap"
        async defer></script>
<script src="{{ asset('bundles/core/js/smoothscroll.js') }}"></script>
<script src="{{ asset('bundles/core/js/jquery.stellar.min.js') }}"></script>
<script src="{{ asset('bundles/core/js/frontend.js') }}"></script>
{% endblock %}